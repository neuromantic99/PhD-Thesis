	keywords = {Anticonvulsants, Cerebral Cortex, Electrocorticography, Epilepsy, Humans, Nerve Net, Neural Networks, Computer, Neurons, antiepileptic drug, branching process, cortex activity, criticality, epilepsy},
	pages = {11118--11125},
}

@article{burnsed_neuronal_2019,
